<launch>
  <include file="$(dirname)/ros_canopen.launch"/>
  <include file="$(dirname)/teleop.launch"/>

  <include file="$(find rplidar_ros)/launch/rplidar_s1.launch"/>

  <node name="base_controller" pkg="haruna" type="base_controller_for_map.py" output="screen"/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  <!-- Laser filter -->
  <node pkg="laser_filters" type="scan_to_scan_filter_chain" name="laser_filter">
    <rosparam command="load" file="$(dirname)/../config/laser_filter.yaml" />
    <!-- <remap from="scan" to="filter_scan" />-->
  </node>

  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" clear_params="true">
    <rosparam command="load" file="$(find haruna)/config/gmapping.yaml" />
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame"  value="map"/>
    <param name="laser_frame" value="laser"/>
  </node>
</launch>
