<launch>
  <include file="$(dirname)/ros_canopen.launch"/>
  <include file="$(dirname)/teleop.launch"/>

  <include file="$(find rplidar_ros)/launch/rplidar_s1.launch"/>

  <node name="base_controller" pkg="haruna" type="base_controller.py" output="screen">
    <param name="vel_limit_linear" value="0.1"/>
    <param name="vel_limit_angular" value="0.2"/>
    <param name="acc_limit_linear" value="1.0"/>
    <param name="acc_limit_angular" value="2.0"/>
  </node>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  <!-- Laser filter -->
  <node pkg="laser_filters" type="scan_to_scan_filter_chain" name="laser_filter">
    <rosparam command="load" file="$(dirname)/../config/laser_filter.yaml"/>
  </node>

  <!-- SLAM Toolbox -->
  <node pkg="slam_toolbox" type="sync_slam_toolbox_node" name="slam_toolbox" output="screen">
    <rosparam command="load" file="$(dirname)/../config/slam_toolbox/mapper_params_online_sync.yaml"/>
  </node>

</launch>
